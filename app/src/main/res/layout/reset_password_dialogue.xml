<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding = "10dp">




    <EditText
        android:id="@+id/resetPasswordEmailEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/email_hint_string"
        android:inputType="textWebEmailAddress|textPersonName|textEmailAddress" />

    <Button
        android:id="@+id/resetPassButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/send_reset_link" />

    <Button
        android:id="@+id/cancelPassReset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@android:string/cancel" />


</LinearLayout>